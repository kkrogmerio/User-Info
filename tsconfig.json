{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@navigation/*": ["navigation/*"],
      "@hooks/*": ["hooks/*"],
      "@services/*": ["services/*"],
      "@constants/*": ["constants/*"],
      "@constants": ["constants/index"], 
      "@types/*": ["types/*"],
      "@features/*": ["features/*"],
      "@test-utils/*": ["test-utils/*"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js"]
}
